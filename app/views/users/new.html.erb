<!-- Reference by https://bootsnipp.com/snippets/a6Pdk -->
<h1 class="text-center" id="heading">ユーザ登録</h1>

<%= form_for(@user) do |f| %>
  <div class="container">
      <div class="card card-container">
          <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
          <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
          <p id="profile-name" class="profile-name-card"></p>
          <form class="form-signin">
              
                <%= render 'shared/error_messages', object: f.object %>

                <%= f.label :name, "ユーザネーム", class: "my-1" %>
                <%= f.text_field :name, id: "inputName", class: "form-control", placeholder: "(例)野球太郎" %>

                <%= f.label :email, "メールアドレス", class: "my-1" %>
                <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "(例)taro@example.com" %>

                <%= f.label :password, "パスワード", class: "my-1" %>
                <%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: "6文字以上のパスワードを入力" %>

                <%= f.label :password_confirmation, "パスワード(確認用)", class: "my-1" %>
                <%= f.password_field :password_confirmation, id: "inputPassword", class: "form-control", placeholder: "上記と同じパスワードを入力" %>

                <%= f.submit "登録", class: "btn btn-primary", class: "btn btn-lg btn-primary btn-block btn-signin my-3" %>
              
          </form><!-- /form -->
      </div><!-- /card-container -->
  </div><!-- /container -->
<% end %>